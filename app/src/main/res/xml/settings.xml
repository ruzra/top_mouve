<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="pref_key_notification_settings"
        android:title="@string/settings_notifications">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="notif_offers"
            android:summary="@string/settings_notification_offers"
            android:title="@string/settings_notification_offers_title" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="notif_nearby_events"
            android:summary="@string/settings_notification_events"
            android:title="@string/settings_notification_events_title" />


        <CheckBoxPreference
            android:defaultValue="true"
            android:key="notif_nearby_stores"
            android:summary="@string/settings_notification_stores"
            android:title="@string/settings_notification_stores_title" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="notif_messenger"
            android:summary="@string/settings_notification_messenger"
            android:title="@string/settings_notification_messenger_title" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="notif_upcomingevent"
            android:summary="@string/settings_notification_upcomingevent"
            android:title="@string/settings_notification_upcomingevent_title" />

    </PreferenceCategory>


    <PreferenceCategory
        android:key="pref_app_infos"
        android:title="@string/settings_app_infos">

        <ListPreference
            android:defaultValue="km"
            android:entries="@array/distanceUnit"
            android:entryValues="@array/distanceUnit"
            android:key="distance_unit"
            android:title="@string/Distance" />


        <Preference
            android:key="app_term_of_uses"
            android:title="@string/app_term_of_uses" />

        <Preference
            android:key="app_privacy"
            android:title="@string/app_privacy" />

        <Preference
            android:key="app_version"
            android:summary="@string/settings_app_infos_title"
            android:title="@string/settings_app_infos_title" />


    </PreferenceCategory>


</PreferenceScreen>